page{
    height: 100%;
}
.mainContainer{
    display: flex;
    height: 100%; 
    flex-direction: column;
    justify-content: space-between;
}

/*用户信息*/
.userInfo{
    margin: 20px;
    height: 50px;
    width: 110px;
    display: flex;
}
.avatar{
    height: 50px;
    width: 50px;
    border-radius: 25px;
}
.userName{
    line-height: 50px;
}

/*手牌区*/
.playerA{
    transform: rotate(180deg);
    display: flex;
 
}
.playerB{
    display: flex;
}
.handCardAreaA{
    height: 100px;
    width: 250px;
    background-color: red;
    display: flex;
}
.handCardAreaB{
    height: 100px;
    width: 250px;
    background-color:blue;
    display: flex;
}
.cardSlot{
    width: 50px;
    height: 80px;
    margin: 10px;
    background-color: pink;
}
/*牌堆与卡池*/
.cardArea{
    display: flex;
    justify-content: space-around;
}
.cardPool{
    height: 200px;
    width: 120px;
    display: flex;
    flex-direction: column;

}
.showArea{
    height: 200px;
    width: 120px;
    display: flex;
    flex-direction: column;
}
.cardCountsA{
    text-align: center;
    transform: rotate(180deg);
}
.cardCountsB{
    text-align: center;
}
/*按钮区域*/
.buttonShow{
    display: flex;
    justify-content: center;
    margin: 20px;
    height: 20px;
}
.buttonHide{
    background-color: #fff;
    margin: 20px;
    height: 20px;
}
.confirmButtonA{
    background-color:rgb(117, 117, 209);
    transform: rotate(180deg);
 
}
.confirmButtonB{
    background-color:rgb(117, 117, 209);
    
}
.disableA{
    pointer-events: none;
    background-color:rgb(126, 126, 128);
    transform: rotate(180deg);
}
.disableB{
    pointer-events: none;
    background-color:rgb(126, 126, 128);
}

.image{
    width: 100%;
    height: 100%;
}

