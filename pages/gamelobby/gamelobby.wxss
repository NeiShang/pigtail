.background{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
}
.userInfo{
    padding: 20px;
    height: 50px;
    width: 150px;
    display: flex;
}
.avatar{
    height: 50px;
    width: 50px;
    border-radius: 25px;
}
.userName{
    line-height: 50px;
}

.localGame{
    border-radius: 20px;
    height: 80px;
    width: 150px;
    text-align: center;
    background:linear-gradient(to bottom, #6a7eda,#4a4cbe);/*设置按钮为渐变颜色*/
