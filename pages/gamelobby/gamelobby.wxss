.background{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
}
.userInfo{
    padding: 40rpx;
    height: 100rpx;
    width: 300rpx;
    display: flex;
}
.avatar{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
}
.userName{
    padding-left: 30rpx;
    line-height: 100rpx;
}

.localGame{
    border-radius: 40rpx;
    height: 140rpx;
    width: 300rpx;
    text-align: center;
    background-color: rgb(116, 191, 235);
    
    border:1px solid #77b3eb;
    margin: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: large;
    font-weight: bold;
    color: #fff;
}
