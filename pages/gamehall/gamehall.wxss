page{
    height: 100%;
}
.container{
    padding: 100rpx 0;
}
.background{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
}

.topBar{
    display: flex;
    justify-content: space-between;
}
.createRoom{
    margin: 0 30rpx;
    width: 160rpx;
    height: 60rpx;
    box-sizing: border-box;
    background-color: rgb(51, 85, 102);
    box-shadow: 0 14rpx 0 #243c47;
    
    text-align: center;
    line-height: 60rpx;
    border-radius: 20rpx;
    color: #fff;
    
}
.radioGroup{
    line-height: 60rpx;
}

/* 选中后的背景样式*/
/*按钮的大小*/
radio .wx-radio-input {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
  }
  radio .wx-radio-input.wx-radio-input-checked {
     /* 背景颜色 */
    background-color: #fff!important; 
    /* 边框颜色 */
    border-color: #419dea!important;
  }
   
  /* 选中后的实心样式*/
  radio .wx-radio-input.wx-radio-input-checked::before {
   /* 将对号去掉 */
   content: ''; 
   /*实心圆圈的大小*/
   width: 18rpx;
   height: 18rpx;
   /*将圆角设置成50%才是一个圆*/
   border-radius: 50%;
   /*圆圈颜色*/
   background-color: #419dea;
  }
  

.searchBar{
    display: flex;
    margin: 60rpx;
}
.inputText{
    float: right;
    text-align: left;
    font-size: 28rpx;
    width: 240rpx;
    border: 1px solid black;
}
.roomLab{
    margin-right: 20rpx;
}
.enterRoom{
    margin-left: 20rpx;
    border-width: 0px; 
	border-radius: 3px; 
	background: #1E90FF; 
	outline: none;
	font-family: Microsoft YaHei; 
	color: white; 
    font-size: 15px; 
}
.roomList{
    height: 720rpx;
    width: 600rpx;
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
}
.roomStyle{
    height: 160rpx;
    width: 240rpx;
    background-color: rgb(98, 126, 204);
    margin: 20rpx;
    border-radius: 40rpx;
}

.roomInfo{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.changePage{
    display: flex;
    margin: 60rpx;
}
.previousPage{
    padding: 20rpx;
}
.currentPage{
    padding: 20rpx;
}
.nextPage{
    padding: 20rpx;
}
