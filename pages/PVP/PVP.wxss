page{
    height: 100%;
}
.background{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
}

.mainContainer{
    display: flex;
    height: 100%; 
    flex-direction: column;
    justify-content: space-between;
}

/*用户信息*/
.userInfo{
    height: 100rpx;
    width: 220rpx;
    margin-top: 40rpx;
    display: flex;
}
.avatar{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
}
.userName{
    line-height: 100rpx;
    margin-left: 20rpx;
}
.yourTurn{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    border:1px solid rgb(61, 71, 214);
}

/*手牌区*/
.player{
    display: flex;
    margin: 40rpx;
}
.handCardArea{
    height: 200rpx;
    width: 500rpx;
    display: flex;
}
.cardSlot{
    width: 104rpx;
    height: 150rpx;
    margin: 10rpx;
    background-color: pink;
    border-radius: 8rpx;
}
/*牌堆与卡池*/
.cardArea{
    display: flex;
    justify-content: space-around;
}
.cardPool{
    height: 400rpx;
    width: 280rpx;
    /* display: flex;
    flex-direction: column; */

}
.showArea{
    height: 400rpx;
    width: 280rpx;
    /* display: flex;
    flex-direction: column; */
}
.cardCounts{
    text-align: center;
}
/*按钮区域*/
.buttonShow{
    display: flex;
    justify-content: center;
    margin: 20rpx;
    height: 60rpx;
}
.buttonHide{
    margin: 20rpx;
    height: 60rpx;
}
.confirmButton{
    background-color:rgb(117, 117, 209);
    margin: 10rpx;
}

.cancelButton{
    background-color:rgb(117, 117, 209);
    margin: 10rpx;
}
.disable{
    pointer-events: none;
    background-color:rgb(126, 126, 128);
    margin: 10rpx;
}


.image{
    width: 100%;
    height: 100%;
}

.cardCounts{
    font-weight: bold;
    color: #fff;
}

